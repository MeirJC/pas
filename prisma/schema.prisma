// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  oid String @unique
  name String
  password String
  attendance Attendance[]
}

model Client {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  oid String @unique
  name String
  projects Project[]
}

model Project {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  adress String 
  client Client @relation(fields: [id], references: [id]) 
  startedAt DateTime
  endedAt DateTime
  attendance Attendance[]
}

model Attendance {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  employee User @relation(fields: [id], references: [id]) 
  project Project @relation(fields: [id], references: [id])
  date DateTime 
  production String
  payment Int 
  notes String
}
