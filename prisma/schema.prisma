generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  oid String @unique
  name String
  password String
  attendance Attendance[] @relation("attendance")
}

model Client {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  oid String @unique
  name String
  projects Project[] @relation("projects")
}

model Project {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  adress String 
  clientId String @db.ObjectId
  client Client @relation("projects",fields: [clientId], references: [id]) 
  startedAt String
  endedAt String?
  attendance Attendance[]
}

model Attendance {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  employeeId String @db.ObjectId
  employee User @relation("attendance",fields: [employeeId], references: [id]) 
  projectId String @db.ObjectId
  project Project @relation(fields: [projectId], references: [id])
  date String 
  production String
  payment Int 
  notes String
}
